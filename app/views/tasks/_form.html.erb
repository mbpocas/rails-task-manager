<%= form_for(task) do |f| %>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :details %>
  <%= f.text_field :details, class: 'form-control' %>
</div>

<div class="form-group">
<% unless @task.new_record? %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
<%end%>

</div>

  <div>
  <%= f.submit class: 'btn btn-primary' %>
  </div>

<% end %>
